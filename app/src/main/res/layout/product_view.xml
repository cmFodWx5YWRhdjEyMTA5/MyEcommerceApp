<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--String ID, String ProductName, String Quantity, String Prize,String Description-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#FFFFDD"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/products_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/products_id"
                android:layout_toRightOf="@+id/products_id"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:text="Name"
                android:textAllCaps="false"
                android:textSize="30sp"
                 />

            <TextView
                android:id="@+id/products_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/products_image"
                android:layout_toRightOf="@+id/products_image"
                android:text="_ID"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/products_quantity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/products_prize"
                android:layout_alignBottom="@+id/products_prize"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/products_image"
                android:layout_toRightOf="@+id/products_image"
                android:text="Quantity" />

            <TextView
                android:id="@+id/products_prize"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/products_name"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/products_quantity"
                android:layout_toRightOf="@+id/products_quantity"
                android:text="Prize"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                 />

            <TextView
                android:id="@+id/products_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/products_quantity"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/products_image"
                android:text="Description"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/products_image"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>